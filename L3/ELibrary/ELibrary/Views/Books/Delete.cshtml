@model ELibrary.Models.Book

<h2>Delete Book</h2>
<p>Are you sure you want to delete the book: <strong>@Model.Title</strong>?</p>

@using (Html.BeginForm("Delete", "Books", new { id = Model.Id }, FormMethod.Post))
{
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}
