@model IEnumerable<Shared.Models.Dto.OrderDto>

<h1>Orders</h1>
<a href="/Product/Index">Go to Products</a>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>
                    <a href="/Order/Details/@order.OrderId">Details</a>
                    <form method="post" action="/Order/Delete" style="display:inline;">
                        <input type="hidden" name="id" value="@order.OrderId" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
