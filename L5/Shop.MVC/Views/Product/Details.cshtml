@model Shared.Models.Dto.ProductDto

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<div>
    <h3>Product Details</h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.CategoryId</td> <!-- Assuming Category is included in the response -->
        </tr>
        <tr>
            <th>Stock</th>
            <td>@Model.StockId</td> <!-- Assuming Stock is included in the response -->
        </tr>
    </table>
</div>

<div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to List</a>
</div>
